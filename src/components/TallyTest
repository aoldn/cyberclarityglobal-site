// src/components/TallyTest.tsx
import { useEffect } from "react";

export default function TallyTest() {
  useEffect(() => {
    // make sure the widget is ready
    if (!(window as any).Tally) {
      const s = document.createElement("script");
      s.src = "https://tally.so/widgets/embed.js";
      s.async = true;
      document.body.appendChild(s);
    }
  }, []);

  const open = () => {
    (window as any).Tally?.openPopup("YOUR_FORM_ID", {
      layout: "modal",
      width: 700,
      hideTitle: true,
      transparentBackground: true,
    });
  };

  return (
    <button onClick={open} className="px-5 py-3 rounded-2xl shadow">
      Start Free Assessment
    </button>
  );
}
